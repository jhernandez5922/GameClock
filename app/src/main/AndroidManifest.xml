<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jhernandez.gameclock" >

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver android:name=".alarm.AlarmReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".game.GameActivity"
            android:label="@string/title_activity_test"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".alarm.AlarmListActivity"
            android:label="@string/title_activity_alarm_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".sqlite.GameClockProvider"
            android:authorities="@string/content_authority"
            android:exported="false" />

        <activity
            android:name=".alarm.creation.EditAlarm"
            android:label="@string/title_activity_edit_alarm"
            android:parentActivityName=".alarm.AlarmListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".alarm.AlarmListActivity" />
        </activity>
        <activity
            android:name=".alarm.creation.EditCreateAlarm"
            android:label="@string/title_activity_edit_create_alarm"
            android:parentActivityName=".alarm.AlarmListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jhernandez.gameclock.alarm.AlarmListActivity" />
        </activity>
    </application>

</manifest>
