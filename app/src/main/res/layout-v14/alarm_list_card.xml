<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp" >

    <RelativeLayout
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00302F">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:gravity="center_vertical"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="30sp"/>
        <CheckBox
            android:id="@+id/active"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/card_title"
            android:id="@+id/digital_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_dark"
            android:text="12:00 AM"
            android:textSize="24sp"/>
        <!--<AnalogClock-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/card_title"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true" />-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/digital_clock"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/sunday_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:gravity="center"
                android:text="Su"/>
            <TextView
                android:id="@+id/monday_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24dp"
                android:gravity="center"
                android:text="Mo"/>
            <TextView
                android:id="@+id/tuesday_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24dp"
                android:gravity="center"
                android:text="Tu"/>
            <TextView
                android:id="@+id/wednesday_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24dp"
                android:gravity="center"
                android:text="We"/>
            <TextView
                android:id="@+id/thursday_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24dp"
                android:gravity="center"
                android:text="Th"/>
            <TextView
                android:id="@+id/friday_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24dp"
                android:gravity="center"
                android:text="Fr"/>
            <TextView
                android:id="@+id/saturday_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24dp"
                android:gravity="center"
                android:text="Sa"/>


        </LinearLayout>

        <!--<TextView-->
            <!--android:id="@+id/card_message"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Content"-->
            <!--android:gravity="center_vertical"-->
            <!--android:textColor="@android:color/holo_orange_dark"-->
            <!--android:textSize="25sp"-->
            <!--android:layout_below="@+id/card_title"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginLeft="5dp" />-->


    </RelativeLayout>

</android.support.v7.widget.CardView>