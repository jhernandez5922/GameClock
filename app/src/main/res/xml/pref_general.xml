<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <CheckBoxPreference
        android:key="example_checkbox"
        android:title="@string/alarm_active"
        android:defaultValue="true" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="name"
        android:title="@string/new_alarm_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:defaultValue="Alarm"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <jhernandez.gameclock.TimePreference
        android:name="Pick a Time"
        android:summary=""
        android:title="Pick a Time"
        android:key="@string/timePicker" />

    <MultiSelectListPreference
        android:name="Repeating"
        android:id="@+id/repeating_alarm"
        android:title="@string/repeating_alarm"
        android:key="repeating"
        android:entries="@array/days_of_week"
        android:entryValues="@array/days_entries"
        android:defaultValue="@array/days_of_week"/>
