<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/sunday_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:background="@drawable/week_gradient"
        android:layout_margin="@dimen/week_margin"
        android:textSize="@dimen/text"
        android:gravity="center"
        android:text="Su"/>
    <TextView
        android:id="@+id/monday_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:background="@drawable/week_gradient"
        android:layout_margin="@dimen/week_margin"
        android:textSize="@dimen/text"
        android:gravity="center"
        android:text="Mo"/>
    <TextView
        android:id="@+id/tuesday_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:background="@drawable/week_gradient"
        android:layout_margin="@dimen/week_margin"
        android:textSize="@dimen/text"
        android:gravity="center"
        android:text="Tu"/>
    <TextView
        android:id="@+id/wednesday_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:background="@drawable/week_gradient"
        android:layout_margin="@dimen/week_margin"
        android:textSize="@dimen/text"
        android:gravity="center"
        android:text="We"/>
    <TextView
        android:id="@+id/thursday_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:background="@drawable/week_gradient"
        android:layout_margin="@dimen/week_margin"
        android:textSize="@dimen/text"
        android:gravity="center"
        android:text="Th"/>
    <TextView
        android:id="@+id/friday_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:background="@drawable/week_gradient"
        android:layout_margin="@dimen/week_margin"
        android:textSize="@dimen/text"
        android:gravity="center"
        android:text="Fr"/>
    <TextView
        android:id="@+id/saturday_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/black_overlay"
        android:background="@drawable/week_gradient"
        android:layout_margin="@dimen/week_margin"
        android:textSize="@dimen/text"
        android:gravity="center"
        android:text="Sa"/>

</LinearLayout>