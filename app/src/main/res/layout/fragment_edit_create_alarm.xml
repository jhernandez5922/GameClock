<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    tools:context="jhernandez.gameclock.alarm.creation.EditAlarm">

    <ScrollView
        android:background="@color/white_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:background="@color/color_accent"
                android:minHeight="180dp">

                <jhernandez.gameclock.alarm.creation.CustomTimePicker
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/time_picker"
                     />
            </TableRow>

            <TableRow
                android:background="@color/color_accent"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content">
                <TextView android:id="@+id/repeating"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="24sp"
                    android:textColor="@color/color_primary"
                    android:text="Repeating"/>

            </TableRow>
            <TableRow
                android:background="@color/color_accent" >
                    <include layout="@layout/week_picker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
            </TableRow>
            <TableRow android:background="@color/color_accent"
                android:layout_marginTop="1dp">
                <TextView android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_primary"
                    android:textSize="24sp"
                    android:text="Name"/>
            </TableRow>
            <TableRow android:background="@color/color_accent"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <EditText android:id="@+id/edit_name"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/color_primary_dark"
                    android:textColor="@color/color_primary"
                    android:layout_width="wrap_content"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:singleLine="true"
                    android:hint="Alarm Name"/>
            </TableRow>

            <TableRow
                android:background="@color/color_accent"
                android:layout_marginTop="1dp">

                <TextView android:id="@+id/ringtone_button"
                    android:layout_height="wrap_content"
                    android:text="Ringtone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/color_primary"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>
            </TableRow>
            <TableRow
                android:background="@color/color_accent">

                <TextView android:id="@+id/current_ringtone"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="left"
                    android:textColor="@color/color_primary"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>
            </TableRow>
        </TableLayout>



    </ScrollView>
    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
